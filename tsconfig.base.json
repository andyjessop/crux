{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@crux/async-queue": ["packages/async-queue/src/index.ts"],
      "@crux/core": ["packages/core/src/index.ts"],
      "@crux/di": ["packages/di/src/index.ts"],
      "@crux/event-emitter": ["packages/event-emitter/src/index.ts"],
      "@crux/fsm": ["packages/fsm/src/index.ts"],
      "@crux/redux-query": ["packages/redux-query/src/index.ts"],
      "@crux/redux-router": ["packages/redux-router/src/index.ts"],
      "@crux/redux-utils": ["packages/redux-utils/src/index.ts"],
      "@crux/router": ["packages/router/src/index.ts"],
      "@crux/store": ["packages/store/src/index.ts"],
      "@crux/string-utils": ["packages/string-utils/src/index.ts"],
      "@crux/sync-queue": ["packages/sync-queue/src/index.ts"],
      "@crux/url-parser": ["packages/url-parser/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
